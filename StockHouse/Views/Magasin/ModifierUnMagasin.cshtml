@model StockHouse.Models.Magasin
@{
    ViewBag.Title = "ModifierUnMagasin";
}

<h2>Modifier un magasin</h2>

@using (Html.BeginForm("ModifierMagasin", "Magasin", FormMethod.Post))
{
    <div class="form-group">
        <label>ID:</label>
        <br/>
        @Html.TextBoxFor(p => p.Id, new { @value = Model.Id, @readonly = "true" })
    </div>
    <div class="form-group">
        <label>Nom:</label>
        <br/>
        @Html.TextBoxFor(p => p.Nom, new { @value = Model.Nom })
    </div>
    <div>
        <label>Adresse:</label>
        <br/>
        @Html.TextBoxFor(p => p.Adresse, new { @value = Model.Adresse })
    </div>
    <div>
        <label>Vile:</label>
        <br/>
        @Html.TextBoxFor(p => p.Ville, new { @value = Model.Ville })
    </div>
    <button type="submit" class="btn btn-primary">Modifier</button>
}
@model StockHouse.Models.Magasin
@{
    ViewBag.Title = "AjouterMagasin";
}

<h2>Ajouter un magasin</h2>

@using (Html.BeginForm("AjouterUnMagasin", "Magasin", FormMethod.Post))
{
    <div class="form-group">
        <label>Nom:</label>
        @Html.TextBoxFor(p => p.Nom)
        @Html.ValidationMessageFor(p => p.Nom)
    </div>
    <div>
        <label>Adresse:</label>
        @Html.TextBoxFor(p => p.Adresse)
    </div>
    <div>
        <label>Ville:</label>
        @Html.TextBoxFor(p => p.Ville)
    </div>
    <button type="submit" class="btn btn-primary">Modifier</button>
}
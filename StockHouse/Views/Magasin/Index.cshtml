
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<p>Pages d'accueil des magasins.</p>
<div class="row">
    <div class="col-lg-3">
        <h4>Afficher les magasins:</h4>
        <button type="button" class="btn btn-primary">
            Afficher    <i class="fas fa-desktop pl-2"></i>
        </button>
    </div>
    <div class="col-lg-3">
        <h4>Ajouter un magasin:</h4>
        <button type="button" class="btn btn-success">
            Ajouter    <i class="fas fa-check pl-2"></i>
        </button>
    </div>
    <div class="col-lg-3">
        <h4>Modifier un magasin:</h4>
        <button type="button" class="btn btn-warning">
            Modifier    <i class="fas fa-pen pl-2"></i>
        </button>
    </div>
    <div class="col-lg-3">
        <h4>Supprimer un magasin:</h4>
        <button type="button" class="btn btn-danger">
            Supprimer   <i class="fas fa-times pl-2"></i>
        </button>
    </div>
</div>

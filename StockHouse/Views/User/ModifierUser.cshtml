@model StockHouse.Models.User

@{
    ViewBag.Title = "ModifierUser";
}

<h2>Modifier un utilisateur</h2>

@using (Html.BeginForm("ModifierUser", "User", FormMethod.Post))
{
    <div class="form-group">
        <label>ID:</label>
        @Html.TextBoxFor(p => p.Id, new { @value = Model.Id, @readonly = "true" })
    </div>
    <div class="form-group">
        <label>Nom:</label>
        @Html.TextBoxFor(p => p.Nom, new { @value = Model.Nom })
        @Html.ValidationMessageFor(p => p.Nom)
    </div>
    <div>
        <label>Adresse:</label>
        @Html.TextBoxFor(p => p.AdresseMail, new { @value = Model.AdresseMail })
        @Html.ValidationMessageFor(p => p.AdresseMail)
    </div>
    <div>
        <label>Ville:</label>
        @Html.TextBoxFor(p => p.MotDePasse, new { @value = Model.MotDePasse })
    </div>
    <div>
        <label>Ville:</label>
        @Html.TextBoxFor(p => p.Role, new { @value = Model.Role })
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
}
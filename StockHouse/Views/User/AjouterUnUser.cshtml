@model StockHouse.Models.User

@{
    ViewBag.Title = "AjouterUnUser";
}

<h2>Ajouter un utilisateur</h2>

@using (Html.BeginForm("AjouterUnUser", "User", FormMethod.Post))
{
    <div class="form-group">
        <label>Nom:</label>
        <br/>
        @Html.TextBoxFor(p => p.Nom)
        <br/>
        @Html.ValidationMessageFor(p => p.Nom)
    </div>
    <div>
        <label>Adresse:</label>
        <br/>
        @Html.TextBoxFor(p => p.AdresseMail)
    </div>
    <div>
        <label>Ville:</label>
        <br/>
        @Html.TextBoxFor(p => p.MotDePasse)
    </div>
    <div>
        <label>Ville:</label>
        <br/>
        @Html.TextBoxFor(p => p.Role)
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
}
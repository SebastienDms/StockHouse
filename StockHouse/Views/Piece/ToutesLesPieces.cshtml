@using StockHouse.Models
@model List<StockHouse.Models.Piece>
@{
    ViewBag.Title = "ToutesLesPieces";
}

<h2>ToutesLesPieces</h2>

<table class="table table-striped table-dark">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Nom</th>
    </tr>
    </thead>
    <tbody>
    @{ int i = 0; }
    @foreach (Piece piece in @Model)
    {
        <tr>
            <th scope="row">@i</th>
            <td>@piece.Nom</td>
        </tr>
        i++;
    }
    </tbody>
</table>
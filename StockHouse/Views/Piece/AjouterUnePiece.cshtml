@model StockHouse.Models.Piece
@{
    ViewBag.Title = "Ajouter une pièce";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("AjouterUnePiece", "Piece", FormMethod.Post))
{
    <div class="form-group">
        <label>Nom:</label>
        <br/>
        @Html.TextBoxFor(p => p.Nom)
        <br/>
        @Html.ValidationMessageFor(p => p.Nom)
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
}
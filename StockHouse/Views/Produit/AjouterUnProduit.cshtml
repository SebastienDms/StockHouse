@model StockHouse.Models.Produit
@{
    ViewBag.Title = "AjouterUnProduit";
}

<h2>Ajouter un produit</h2>

@using (Html.BeginForm("AjouterUnProduit", "Produit", FormMethod.Post))
{
    <div class="form-group">
        <label>Nom:</label>
        @Html.TextBoxFor(p => p.Nom)
        @Html.ValidationMessageFor(p => p.Nom)
    </div>
    <div>
        <label>Marque:</label>
        @Html.TextBoxFor(p => p.Marque)
    </div>
    <div>
        <label>Type:</label>
        @Html.TextBoxFor(p => p.Type)
    </div>
    <div>
        <label>Stock:</label>
        @Html.TextBoxFor(p => p.Stock)
        @Html.ValidationMessageFor(p => p.Stock)
    </div>
    <div>
        <label>Pièce:</label>
        @Html.DropDownListFor(p => p.PieceId, ViewBag.PieceList as SelectList, "--Select piece--")
        @Html.ValidationMessageFor(p => p.PieceId)
    </div>
    <button type="submit" class="btn btn-primary">Ajouter</button>
}
@using StockHouse.Models
@model List<Produit>

@{
    ViewBag.Title = "TousLesProduits";
}

<h2>TousLesProduits</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nom</th>
            <th scope="col">Marque</th>
            <th scope="col">Type</th>
            <th scope="col">Stock</th>
            <th scope="col">Pièce</th>
        </tr>
    </thead>
    <tbody>
    @foreach (Produit produit in @Model)
    {
        <tr>
            <th scope="row">@produit.Id</th>
            <td>@produit.Nom</td>
            <td>@produit.Marque</td>
            <td>@produit.Type</td>
            <td>@produit.Stock</td>
            <td>@produit.PieceId</td>
        </tr>
    }
    </tbody>
</table>